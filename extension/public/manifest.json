{
  "manifest_version": 3,
  "name": "PostureCare",         
  "version": "1.0",
  "description": "Real-time posture correction and wellness management", 
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["storage", "activeTab", "offscreen", "alarms"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["http://localhost:5000/*", "https://localhost:5000/*"]
}
